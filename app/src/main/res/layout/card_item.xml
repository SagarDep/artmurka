<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivItemPhoto"
            android:layout_toLeftOf="@+id/item_iv"
            android:layout_toStartOf="@+id/item_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="start"
                android:lineSpacingExtra="2sp"

                android:paddingTop="2dp"
                android:text="500 грн"
                android:visibility="visible" />

            <TextView
                android:id="@+id/item_name"
                android:fontFamily="@font/futura_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:gravity="start"
                android:lineSpacingExtra="2sp"
                android:maxLines="1"
                android:paddingTop="2dp"
                android:text="sdf"
                android:visibility="visible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivItemPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/item_iv"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ivItemPhoto"
            android:visibility="visible"
            card_view:srcCompat="@drawable/ic_menu" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

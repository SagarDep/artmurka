<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    card_view:cardUseCompatPadding="true"

    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1.5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/good_name"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:paddingStart="5dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/ivItemPhoto"
            android:layout_toLeftOf="@+id/basket_menu"
            android:layout_toRightOf="@+id/ivItemPhoto"
            android:layout_toStartOf="@+id/basket_menu"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="2dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivItemPhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/splash" />

        <TextView
            android:id="@+id/good_description"
            android:layout_width="wrap_content"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_light"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/good_name"
            android:layout_toRightOf="@+id/ivItemPhoto" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="2222 грн"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/basket_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/good_description"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:foregroundGravity="right"
            card_view:srcCompat="@drawable/ic_menu" />

    </RelativeLayout>
</android.support.v7.widget.CardView>